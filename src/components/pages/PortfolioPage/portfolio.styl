.portfolio-page
  .ReactModal__Content.modal
    display: block
    max-width 700px
    height auto
    right auto
    bottom auto
    top 50%
    left 50%
    width 100%
    transform: translate(-50%, -50%)
    color: #fff

    .close
      background none
      color #fff
      border 0
      font-size 22px

    .modal-header
      border 0
    
    .modal-body
      padding-top 0
    

    .modal-content
      background: #000

  .ReactModal__Overlay.overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, .8)
  }

  &.ReactModal__Body--open
    overflow hidden
    height 100%