
.hp-hero
  padding: 10% 7%;
  text-align center;
  background-size: cover
  background-position center
  flex: 0 0 49%;
  max-width: 49%;

  &:nth-child(1)
    background-image url("/images/hp-1.png");
    margin-right 1%

  &:nth-child(2)
    background-image url("/images/hp-2.png");
    margin-left: 1%;

  h2
    font-size: 36px;
    line-height 46px;
    margin-bottom 20px
    padding: 0 5%

  p
    font-size 18px
    line-height 34px

  .btn
    margin-top 40px;
    color: #000;
    background-color: #fff;
    border-color: #fff;
    text-transform uppercase
    padding: 3%;
