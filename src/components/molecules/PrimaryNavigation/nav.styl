.navbar
  padding-right 0
  padding-left 0

  .dropdown
    padding 3px 10px

    .dropdown-toggle
      &:after
        display none
        border 0
        margin 0

    .dropdown-item
      padding 4px 10px

    &:hover
      .dropdown-menu
        display block
        left 7px
        top 50%
        background-color #212223

  .navbar-nav
    .nav-link
    .dropdown-toggle
    .dropdown-item
      font-family "Montserrat"
      font-size 12px
      text-transform uppercase
      font-weight 300
      color #8085E2

      &:after
        content ''
        width 100%
        height 3px
        display block
        border-radius 2px
        margin-top 4px

      &:hover
      &:active
      &:focus
      &:visited
        color #8085E2
        text-decoration none

      &.active
        font-weight 400
        position relative

        &:after
          background linear-gradient(90deg, #7D8BE0 -183.82%, #A154F2 2.6%);

  &-brand
    img
      max-width 140px

.main-header
  background-color #212223