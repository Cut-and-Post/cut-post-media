.navbar
  padding-right 0
  padding-left 0

  .navbar-nav
    .nav-link
      font-family "Montserrat"
      font-size 12px
      text-transform uppercase
      font-weight 300
      color #8085E2

      &:hover
      &:active
      &:focus
      &:visited
        color #8085E2

      &.active
        font-weight 400
        position relative

        &:after
          content ''
          width 100%
          height 3px
          display block
          background linear-gradient(90deg, #7D8BE0 -183.82%, #A154F2 2.6%);
          border-radius 2px
          margin-top 4px

  &-brand
    img
      max-width 140px

.main-header
  background-color #212223