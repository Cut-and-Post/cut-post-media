.profile-card-avatar
  text-align center

  .avatar
    display inline-block
    overflow hidden
    border-radius: 100%
    background linear-gradient(90deg, #7D8BE0 0%, #A154F2 100%)
    padding 2px

    div
      overflow hidden
      border-radius: 100%
      display: block
      width 130px
      height 130px
      position relative

      img
        position absolute
        top 0
        left 0
        width 100%
        height 100%

  h4
    margin 6px 0

  .position
    color #7D8BE0
    font-size 10px
    text-transform uppercase
    font-weight 600
    margin 18px 0 0

  .location
    font-style: italic
    color rgba(#fff, .7)
    margin 0
    font-size 15px
    